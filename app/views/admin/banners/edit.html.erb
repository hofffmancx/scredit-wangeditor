<%= simple_form_for [:admin, @banner ] do |f| %>

  <h1><%= @banner.name %></h1>

  <div class="form-group">
    <%= f.input :title, as: :ckeditor, :label => "配图文字" %>
    <%= f.input :pic, :label => "图片地址" %>
    <hr>
  </div>
  <%= f.submit "提交", class: "btn btn-sm btn-default", data: {disable_with: "Submiting..."} %>
<% end %>
