<%= simple_form_for [:admin, @article] do |f| %>
  <div class="form-group">
    <%= f.input :title, :label => "标题" %>
    <%= f.input :image, as: :file, :label => "封面(要求：600px*400px)" %>
    <%= f.input :summary, :label => "摘要" %>
    <%= f.input :description, :label => "内容", input_html: { style: 'height:400px;max-height:500px;' } %>
    <%= select_tag(:article_category_id, options_for_select(@article_categories), :prompt => "类别") %>

    <%= f.input :is_hidden, :label => "隐藏(审核不通过)" %>
    <hr>

  </div>
  <%= f.submit "提交", class: "btn btn-sm btn-default", data: {disable_with: "Submiting..."} %>
<% end %>

<script>
var editor = new wangEditor('article_description')
editor.config.menus = [
  'bold',
  'underline',
  'italic',
  'strikethrough',
  'forecolor',
  '|',
  'quote',
  'fontfamily',
  'fontsize',
  'head',
  'unorderlist',
  'orderlist',
  'alignleft',
  'aligncenter',
  'alignright',
  '|',
  'link',
  'unlink',
  'table',
  '|',
  'img',
  'video',
];

editor.config.uploadImgFileName = 'imgFile'
editor.config.uploadImgUrl = '/upload'
editor.create()
</script>
