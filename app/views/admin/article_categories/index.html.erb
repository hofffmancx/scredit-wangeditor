

<div class="account-box">

  <h3 class="text-center">资讯分类列表（Article List）</h3>

  <!-- "增加文章"按钮 -->
  <br>
  <div>
    <%= link_to("增加分类", new_admin_article_category_path, class: "btn btn-sm btn-default pull-right") %>
  </div>


  <!-- 所有文章列表 -->
  <table class="table table-hover table-bordered table-responsive">
    <thead>
      <tr>
        <td>ID</td>
        <td>分类名称</td>
        <td>发布时间</td>
        <td>操作</td>
      </tr>
    </thead>
    <tbody>
      <% @article_categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.name %></td>
          <td><%= category.created_at %></td>
          <td>
            <%= link_to("Edit", edit_admin_article_category_path(category)) %> |
            <%= link_to("destroy", admin_article_category_path(category), method: :delete, data: { confirm: "你确定要删除吗？"}) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
